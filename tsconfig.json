{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "ESNext",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
            "DOM"
        ],
        "outDir": "lib",
        "declaration": true,
        "strict": false,
        "strictFunctionTypes": false,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}